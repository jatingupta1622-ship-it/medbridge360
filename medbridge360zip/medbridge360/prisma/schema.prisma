generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Hospital {
  id          String      @id @default(cuid())
  name        String
  city        String
  state       String
  country     String
  rating      Float
  imageUrl    String
  description String      @db.Text
  latitude    Float
  longitude   Float
  treatments  Treatment[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("hospitals")
}

model Treatment {
  id               String   @id @default(cuid())
  hospitalId       String
  treatmentName    String
  baseCost         Float
  surgeryCost      Float
  medicationCost   Float
  hospitalStayCost Float
  durationDays     Int
  hospital         Hospital @relation(fields: [hospitalId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("treatments")
}
